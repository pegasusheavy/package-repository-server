# Package Repository Server - Environment Configuration
# Copy this file to .env and customize values

# API Authentication (required for uploads/deletions)
# Generate with: make generate-key
API_KEYS=your-api-key-here

# Server Configuration
REPO_API_PORT=8080
RUST_LOG=info

# Storage Paths
REPO_DATA_DIR=/data/packages
REPO_GPG_DIR=/data/gpg

# S3 Storage (optional - leave S3_ENABLED=false for local storage)
S3_ENABLED=false
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=my-package-repo
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# TLS Configuration (optional)
DOMAIN=
TLS_MODE=none
ADMIN_EMAIL=admin@localhost
